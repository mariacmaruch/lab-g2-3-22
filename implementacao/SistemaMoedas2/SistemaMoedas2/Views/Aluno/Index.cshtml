@model List<Aluno>
@{
    ViewData["Title"] = "Lista de alunos";
}

<h2>Lista de alunos</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Instituição</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (Aluno item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    <td>@item.InstituicaoId</td>
                    <td>
                        <a role="button" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="Aluno" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-secondary" asp-route-id="@item.Id" asp-controller="Aluno" asp-action="Apagar">Deletar</a>
                    </td>

                </tr>
            }
        }
    </tbody>
</table>