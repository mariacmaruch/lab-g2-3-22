@model Aluno

@{
    ViewData["Title"] = "Editar aluno";
}

<div class="text-justify">
    <h3 class="display-4">Editar aluno</h3>
    <form asp-controller="Aluno" asp-action="Editar" method="post">
        <input type="hidden" asp-for="Id" /> 

        <div class="form-group mb-3">
            <label for="exampleInputNome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" id="exampleInputNome">
        </div>

        <div class="form-group mb-3">
            <label for="exampleInputEmail1">Email</label>
            <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>

        <div class="form-group mb-3">
            <label for="exampleInputPassword1">Senha</label>
            <input type="password" asp-for="Senha" class="form-control" id="exampleInputPassword1">
        </div>

        <div class="form-group mb-3">
            <label for="exampleInputCpf">Cpf</label>
            <input type="text" asp-for="Cpf" class="form-control" id="exampleInputCpf">
        </div>

        <div class="form-group mb-3">
            <label for="exampleInputRg">Rg</label>
            <input type="text" asp-for="Rg" class="form-control" id="exampleInputRg">
        </div>

        <div class="form-group mb-3">
            <label for="exampleInputEndereco">Endereço</label>
            <input type="text" asp-for="Endereco" class="form-control" id="exampleInputEndereco">
        </div>

        <div class="form-group">
            <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Instituicao</label>
            <select asp-for="InstituicaoId" asp-items="ViewBag.Instituicao"></select>
        </div>

        <br />
        <div>
            <button type="submit" class="btn btn-primary">Editar</button>
            <a role="button" class="btn btn-secondary" asp-controller="Aluno" asp-action="Index">Voltar</a>
        </div>
    </form>

</div>